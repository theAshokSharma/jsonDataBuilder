{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Choices Configuration Schema",
  "description": "Schema for defining dropdown choices, response types, and conditional rules",
  "type": "object",
  "properties": {
    "conditional_rules": {
      "type": "object",
      "description": "Rules for conditionally disabling fields based on other field values",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "value": {
              "description": "The value that triggers this rule"
            },
            "disable_fields": {
              "type": "array",
              "description": "List of field paths to disable when condition is met",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["value", "disable_fields"],
          "additionalProperties": false
        }
      }
    }
  },
  "patternProperties": {
    "^(?!conditional_rules$)[a-zA-Z_][a-zA-Z0-9_.]*$": {
      "oneOf": [
        {
          "type": "array",
          "description": "Simple array of choice values (legacy format)",
          "items": {
            "oneOf": [
              {"type": "string"},
              {"type": "number"}
            ]
          }
        },
        {
          "type": "object",
          "description": "Detailed choice configuration",
          "properties": {
            "values": {
              "type": "array",
              "description": "List of selectable values or ranges (e.g., '1-10', '1920-2024')",
              "items": {
                "oneOf": [
                  {"type": "string"},
                  {"type": "number"}
                ]
              },
              "minItems": 1
            },
            "response_type": {
              "type": "string",
              "enum": ["single-select", "multi-select"],
              "description": "Whether user can select one or multiple values"
            },
            "na": {
              "type": "string",
              "description": "Optional N/A value that acts as exclusive option"
            }
          },
          "required": ["values", "response_type"],
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false
}